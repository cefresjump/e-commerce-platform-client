{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "allowJs": true,
    "allowImportingTsExtensions":true,
    "skipLibCheck": true,
    "outDir": "out",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.vue",
    "**/*.js",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "allowJs": true,
      "target": "ES2020",
      "module": "ES2020"
    },
    "esm": true
  }
}